<?xml version="1.0"?>
<psalm
    errorLevel="1"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
    findUnusedBaselineEntry="true"
    findUnusedCode="true"
>
    <projectFiles>
        <directory name="src" />
        <ignoreFiles>
            <directory name="src/Controller" />
            <directory name="src/DependencyInjection" />
            <directory name="src/EventSubscriber" />
            <directory name="src/Factory" />
            <directory name="src/Form/DataMapper" />
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>
    <fileExtensions>
        <extension name=".php" />
        <extension name=".twig" checker="./vendor/psalm/plugin-symfony/src/Twig/TemplateFileAnalyzer.php" />
    </fileExtensions>
    <plugins>
        <pluginClass class="Psalm\SymfonyPsalmPlugin\Plugin">
            <containerXml>var/cache/dev/App_KernelDevDebugContainer.xml</containerXml>
        </pluginClass>
        <pluginClass class="Psalm\PhpUnitPlugin\Plugin" />
        <pluginClass class="Weirdan\DoctrinePsalmPlugin\Plugin" />
    </plugins>
    <issueHandlers>
        <ArgumentTypeCoercion>
            <errorLevel type="suppress">
                <directory name="src/Security" />
            </errorLevel>
        </ArgumentTypeCoercion>
        <InvalidNullableReturnType>
            <errorLevel type="suppress">
                <directory name="src/Entity" />
            </errorLevel>
        </InvalidNullableReturnType>
        <MissingConstructor>
            <errorLevel type="suppress">
                <directory name="src/DataTransferObjects" />
                <directory name="src/Entity" />
            </errorLevel>
        </MissingConstructor>
        <MissingTemplateParam>
            <errorLevel type="suppress">
                <directory name="src/Form" />
            </errorLevel>
        </MissingTemplateParam>
        <MixedArgumentTypeCoercion>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </MixedArgumentTypeCoercion>
        <MixedPropertyTypeCoercion>
            <errorLevel type="suppress">
                <directory name="src" />
            </errorLevel>
        </MixedPropertyTypeCoercion>
        <NullableReturnStatement>
            <errorLevel type="suppress">
                <directory name="src/Entity" />
            </errorLevel>
        </NullableReturnStatement>
        <PossiblyUnusedMethod>
            <errorLevel type="suppress">
                <directory name="src/DataTransferObjects" />
                <directory name="src/Entity" />
                <directory name="src/Event" />
                <directory name="src/Pagination" />
                <directory name="src/Query" />
                <directory name="src/Repository" />
                <directory name="src/Security" />
            </errorLevel>
        </PossiblyUnusedMethod>
        <PossiblyUnusedParam>
            <errorLevel type="suppress">
                <directory name="src/Repository" />
            </errorLevel>
        </PossiblyUnusedParam>
        <PropertyNotSetInConstructor>
            <errorLevel type="suppress">
                <directory name="src/Handler" />
                <directory name="src/Pagination" />
            </errorLevel>
        </PropertyNotSetInConstructor>
        <UnusedClass>
            <errorLevel type="suppress">
                <directory name="src/Entity" />
            </errorLevel>
        </UnusedClass>
    </issueHandlers>
</psalm>
