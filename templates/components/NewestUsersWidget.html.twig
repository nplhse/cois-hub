<div{{ attributes }}>
    <div class="card">
        <div class="card-header border-0">
            <div class="card-title">10 {{ "label.newest_users"|trans }}</div>
        </div>
        <div class="card-table table-responsive">
            <table class="table table-vcenter">
                <thead>
                <tr>
                    <th>{{ "label.username"|trans }}</th>
                    <th>{{ "label.email"|trans }}</th>
                    <th>{{ "label.created_at"|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in this.users.results %}
                    <tr>
                        <td class="w-25">
                            <a href="{{ path('app_admin_user_show', {'id': user.id}) }}">{{ user.username }}</a>
                        </td>
                        <td class="td-truncate">
                            <div class="text-truncate">
                                {{ user.email }}
                                {% if user.isVerified %}
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-check" width="16" height="16" viewBox="0 0 24 24" stroke-width="2" stroke="#2fb344" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M5 12l5 5l10 -10" />
                                    </svg>
                                {% endif %}
                            </div>
                        </td>
                        <td class="text-nowrap text-muted">{{ user.createdAt ? user.createdAt|date('d.m.Y H:i') : '' }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
