{% extends '_layout_sidebar.html.twig' %}

{% block title %}{{ "title.hospital_edit"|trans }}: {{ hospital.name }} - {{ parent() }}{% endblock %}

{% block header_breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">{{ "label.backend"|trans }}</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_admin_hospital_index') }}">{{ "label.hospitals"|trans }}</a></li>
    <li class="breadcrumb-item active">{{ "label.edit"|trans }}: {{ hospital.name }}</li>
{% endblock %}

{% block header_title %}
    <!-- Page pre-title -->
    <div class="page-pretitle">
        {{ "title.hospital_edit"|trans }}
    </div>
    <h2 class="page-title">
        {{ "title.hospitals"|trans }}
    </h2>
{% endblock %}

{% block header_actions %}
    <div class="btn-list">
        {{ include('admin/hospital/_delete_form.html.twig') }}
    </div>
{% endblock %}

{% block sidebar_menu %}
    {% include 'includes/sidebar_admin.html.twig' %}
{% endblock %}

{% block body %}
    <div class="row row-cards">
        {{ form_start(form) }}
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">{{ "label.basic_info"|trans }}</h3>

                        {{ form_row(form.name) }}

                        {{ form_row(form.owner) }}

                        <h3 class="card-title">{{ "label.properties"|trans }}</h3>

                        <div class="row row-cards">
                            <div class="col-sm-4 col-md-4">
                                {{ form_row(form.beds) }}
                            </div>
                            <div class="col-sm-4 col-md-4">
                                {{ form_row(form.location) }}
                            </div>
                            <div class="col-sm-4 col-md-4">
                                {{ form_row(form.tier) }}
                            </div>
                        </div>

                        <h3 class="card-title">{{ "label.hospital_location"|trans }}</h3>

                        <div class="row row-cards">
                            <div class="col-sm-12 col-md-5">
                                {{ form_row(form.dispatchArea) }}
                            </div>
                            <div class="col-sm-6 col-md-4">
                                {{ form_row(form.state) }}
                            </div>
                            <div class="col-sm-6 col-md-3">
                                {{ form_row(form.supplyArea) }}
                            </div>
                        </div>

                        <h3 class="card-title">{{ "label.address"|trans }}</h3>

                        <div class="row row-cards">
                            <div class="col-md-5">
                                {{ form_row(form.address.street) }}
                            </div>
                            <div class="col-sm-6 col-md-3">
                                {{ form_row(form.address.postalCode) }}
                            </div>
                            <div class="col-sm-6 col-md-4">
                                {{ form_row(form.address.city) }}
                            </div>
                            <div class="col-sm-6 col-md-6">
                                {{ form_row(form.address.state) }}
                            </div>
                            <div class="col-sm-6 col-md-6">
                                {{ form_row(form.address.country) }}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="float-start">
                            <a class="btn btn-outline-secondary" href="{{ path('app_admin_hospital_index') }}">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M15 6l-6 6l6 6" />
                                </svg>
                                {{ "label.back_to_list"|trans }}
                            </a>
                        </div>
                        <div class="btn-list justify-content-end">
                            <a href="{{ path('app_admin_hospital_show', {id: hospital.id}) }}" class="btn">
                                {{ "label.cancel"|trans }}
                            </a>
                            <button class="btn btn-primary" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-device-floppy" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M6 4h10l4 4v10a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12a2 2 0 0 1 2 -2" />
                                    <path d="M12 14m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" />
                                    <path d="M14 4l0 4l-6 0l0 -4" />
                                </svg>
                                {{ "label.save_changes"|trans }}
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
