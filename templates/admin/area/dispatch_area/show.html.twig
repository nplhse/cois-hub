{% extends 'admin/_base.html.twig' %}

{% block title %}{{ "title.area_dispatch_show"|trans }}: {{ dispatch_area.name }}  - {{ parent() }}{% endblock %}

{% block admin_breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item">{{ "label.areas"|trans }}</li>
    <li class="breadcrumb-item active">{{ "label.area_dispatch"|trans }}</li>
{% endblock %}

{% block admin_title %}
    <!-- Page pre-title -->
    <div class="page-pretitle">
        {{ "title.list_areas"|trans }}
    </div>
    <h2 class="page-title">
        {{ "title.area_dispatch"|trans }}
    </h2>
{% endblock %}

{% block admin_title_actions %}
    <div class="btn-list">
        <div class="btn-list">
            <span class="d-none d-sm-inline">
                <a class="btn btn-outline-secondary" href="{{ path('app_admin_area_dispatch_index') }}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                        <path d="M15 6l-6 6l6 6" />
                    </svg>
                    {{ "label.back_to_list"|trans }}
                </a>
            </span>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs nav-fill">
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_state_index') }}" class="nav-link">{{ "label.area_state"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_dispatch_index') }}" class="nav-link active">{{ "label.area_dispatch"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_supply_index') }}" class="nav-link">{{ "label.area_supply"|trans }}</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="card">
                    <div class="card-header bg-body-secondary">
                        <h3 class="card-title fw-bold">{{ dispatch_area.name }}</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                            <tr>
                                <th class="col-4">{{ "label.id"|trans }}</th>
                                <td class="col-8">{{ dispatch_area.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ "label.state"|trans }}</th>
                                <td>{{ dispatch_area.state }}</td>
                            </tr>
                            <tr>
                                <th>{{ "label.supply_area"|trans }}</th>
                                <td>{{ dispatch_area.supplyArea }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer mt-auto">
                        <div class="btn-list justify-content-end">
                            {{ include('admin/area/dispatch_area/_delete_form.html.twig') }}
                            <a href="{{ path('app_admin_area_dispatch_edit', {id: dispatch_area.id}) }}" class="btn btn-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M7 7h-1a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-1" />
                                    <path d="M20.385 6.585a2.1 2.1 0 0 0 -2.97 -2.97l-8.415 8.385v3h3l8.385 -8.415z" />
                                    <path d="M16 5l3 3" />
                                </svg>
                                {{ "label.area_edit_dispatch"|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
