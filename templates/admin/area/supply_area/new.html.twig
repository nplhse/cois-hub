{% extends 'admin/_base.html.twig' %}

{% block title %}{{ "title.area_supply_new"|trans }} - {{ parent() }}{% endblock %}

{% block admin_breadcrumb %}
    {{ parent() }}
    <li class="breadcrumb-item">{{ "label.areas"|trans }}</li>
    <li class="breadcrumb-item active">{{ "label.area_supply"|trans }}</li>
{% endblock %}

{% block admin_title %}
    <!-- Page pre-title -->
    <div class="page-pretitle">
        {{ "title.area_create_supply"|trans }}
    </div>
    <h2 class="page-title">
        {{ "title.area_supply"|trans }}
    </h2>
{% endblock %}

{% block admin_title_actions %}
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs nav-fill">
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_state_index') }}" class="nav-link">{{ "label.area_state"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_dispatch_index') }}" class="nav-link">{{ "label.area_dispatch"|trans }}</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_admin_area_supply_index') }}" class="nav-link active">{{ "label.area_supply"|trans }}</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}

                        {{ form_row(form.name) }}

                        {{ form_row(form.dispatchArea) }}
                    </div>
                    <div class="card-footer">
                        <div class="float-start">
                            <a class="btn btn-outline-secondary" href="{{ path('app_admin_area_supply_index') }}">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M15 6l-6 6l6 6" />
                                </svg>
                                {{ "label.back_to_list"|trans }}
                            </a>
                        </div>
                        <div class="btn-list justify-content-end">
                            <a href="{{ path('app_admin_area_supply_index') }}" class="btn">
                                {{ "label.cancel"|trans }}
                            </a>
                            <button class="btn btn-primary" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-circle-plus" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" />
                                    <path d="M9 12h6" />
                                    <path d="M12 9v6" />
                                </svg>
                                {{ "label.create_area_supply"|trans }}
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
