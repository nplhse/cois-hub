{% extends 'base.html.twig' %}

{% set _route = app.request.attributes.get('_route') %}

{% block body %}
    <!-- Page header -->
    <div class="page-header d-print-none">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-auto">
                    <h2 class="page-title">
                        <a href="{{ path("app_data_hospital_edit", {id: hospital.id}) }}">{{ "title.hospital_edit"|trans }}: {{ hospital.name }}</a>
                    </h2>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-list">
                        <span class="d-none d-sm-inline">
                            <a class="btn btn-outline-secondary" href="{{ path('app_data_hospital_index') }}">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-chevron-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M15 6l-6 6l6 6" />
                                </svg>
                                {{ "label.back_to_list"|trans }}
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Page body -->
    <div class="page-body">
        <div class="container-xl">
            <div class="card">
                <div class="row g-0">
                    <div class="col-3 d-none d-md-block border-end">
                        <div class="card-body">
                            <div class="list-group list-group-transparent">
                                <a
                                    href="{{ path('app_data_hospital_edit', {id: hospital.id}) }}"
                                    class="list-group-item list-group-item-action d-flex align-items-center {{ _route ends with 'edit' ? 'active' : '' }}"
                                >
                                    &nbsp;{{ "label.basic_info"|trans }}
                                </a>
                                <a
                                    href="{{ path('app_data_hospital_edit_properties', {id: hospital.id}) }}"
                                    class="list-group-item list-group-item-action d-flex align-items-center {{ _route ends with 'properties' ? 'active' : '' }}"
                                >
                                    &nbsp;{{ "label.properties"|trans }}
                                </a>
                                <a
                                    href="{{ path('app_data_hospital_edit_address', {id: hospital.id}) }}"
                                    class="list-group-item list-group-item-action d-flex align-items-center {{ _route ends with 'address' ? 'active' : '' }}"
                                >
                                    &nbsp;{{ "label.address"|trans }}
                                </a>
                                <a
                                    href="{{ path('app_data_hospital_edit_users', {id: hospital.id}) }}"
                                    class="list-group-item list-group-item-action d-flex align-items-center {{ _route ends with 'users' ? 'active' : '' }}"
                                >
                                    &nbsp;{{ "label.users_linked"|trans }}
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col d-flex flex-column">
                        {% block card %}{% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
