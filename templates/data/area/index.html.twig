{% extends 'base.html.twig' %}

{% macro sortArrow(sortName, sortBy, orderBy) %}
    {% if sortBy == sortName %}
        {% if orderBy == 'asc' %}
            <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-4 h-4" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M6 15l6 -6l6 6"></path>
            </svg>
        {% else %}
            <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-4 h-4" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                <path d="M6 9l6 6l6 -6"></path>
            </svg>
        {% endif %}
    {% else %}
        <!-- up and down arrow svg -->
        <svg xmlns="http://www.w3.org/2000/svg" class="inline-block w-4 h-4 text-slate-300" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M8 9l4 -4l4 4"></path>
            <path d="M16 15l-4 4l-4 -4"></path>
        </svg>
    {% endif %}
{% endmacro %}

{% block title %}{{ "title.list_areas"|trans }} - {{ "title.data"|trans }} {{ parent() }}{% endblock %}

{% block header %}
    {% embed "embeds/header.html.twig" %}{% endembed %}

    {% include 'data/_subnav.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container-xl">
        <div class="card">
            <div class="card-body">
                <div class="tab-content">
                    <table class="table">
                        <thead>
                            <tr>
                                <th class="col-1">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'id',
                                        orderBy: sortBy == 'id' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.id"|trans }} {{ _self.sortArrow('id', sortBy, orderBy) }}
                                    </a>
                                </th>
                                <th class="col-3">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'name',
                                        orderBy: sortBy == 'name' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.name"|trans }} {{ _self.sortArrow('name', sortBy, orderBy) }}
                                    </a>
                                </th>
                                <th class="col-2">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'state',
                                        orderBy: sortBy == 'state' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.state"|trans }} {{ _self.sortArrow('state', sortBy, orderBy) }}
                                    </a>
                                </th>
                                <th class="col-2">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'supplyArea',
                                        orderBy: sortBy == 'supplyArea' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.supply_area"|trans }} {{ _self.sortArrow('state', sortBy, orderBy) }}
                                    </a>
                                </th>
                                <th class="col-2">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'createdAt',
                                        orderBy: sortBy == 'createdAt' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.created_at"|trans }} {{ _self.sortArrow('createdAt', sortBy, orderBy) }}
                                    </a>
                                </th>
                                <th class="col-2">
                                    <a href="{{ path('app_data_area', {
                                        ...app.request.query.all(),
                                        sortBy: 'updatedAt',
                                        orderBy: sortBy == 'updatedAt' and orderBy == 'asc' ? 'desc' : 'asc',
                                    }) }}">
                                        {{ "label.updated_at"|trans }} {{ _self.sortArrow('updatedAt', sortBy, orderBy) }}
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for dispatch_area in areas.results %}
                            <tr>
                                <td>
                                    {{ dispatch_area.id }}
                                </td>
                                <td>
                                    <a href="#">{{ dispatch_area.name }}</a>
                                </td>
                                <td>
                                    <a href="#">{{ dispatch_area.state }}</a>
                                </td>
                                <td>
                                    <a href="#">{{ dispatch_area.supplyArea }}</a>
                                </td>
                                <td>
                                    {{ dispatch_area.createdAt ? dispatch_area.createdAt|date('d.m.Y H:i') : '' }}
                                </td>
                                <td>
                                    {{ dispatch_area.updatedAt ? dispatch_area.updatedAt|date('d.m.Y H:i') : '' }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">
                                    <div class="empty">
                                        <div class="empty-icon">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                                <circle cx="12" cy="12" r="9" />
                                                <line x1="9" y1="10" x2="9.01" y2="10" />
                                                <line x1="15" y1="10" x2="15.01" y2="10" />
                                                <path d="M9.5 15.25a3.5 3.5 0 0 1 5 0" />
                                            </svg>
                                        </div>
                                        <p class="empty-title">{{ "label.search_no_results"|trans }}</p>
                                        <p class="empty-subtitle text-secondary">
                                            {{ "help.search_no_results"|trans }}
                                        </p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-muted">Showing <span>{{ areas.numResults }}</span> results, with <span>{{ areas.pageSize }}</span> per page.</p>
                {% if areas.hasToPaginate %}
                    <ul class="pagination m-0 ms-auto">
                        {% if areas.hasPreviousPage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_data_area', {page: areas.previousPage}) }}" tabindex="-1" aria-disabled="true">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6" /></svg>
                                    {{ "label.previous"|trans }}
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    <!-- Download SVG icon from http://tabler-icons.io/i/chevron-left -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 6l-6 6l6 6" /></svg>
                                    {{ "label.previous"|trans }}
                                </a>
                            </li>
                        {% endif %}
                        {% if areas.hasNextPage %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('app_data_area', {page: areas.nextPage}) }}">
                                    {{ "label.next"|trans }} <!-- Download SVG icon from http://tabler-icons.io/i/chevron-right -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 6l6 6l-6 6" /></svg>
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">
                                    {{ "label.next"|trans }} <!-- Download SVG icon from http://tabler-icons.io/i/chevron-right -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M9 6l6 6l-6 6" /></svg>
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
