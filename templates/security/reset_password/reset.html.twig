{% extends '_layout_vertical.html.twig' %}

{% block title %}{{ "title.reset_password"|trans }} - {{ parent() }}{% endblock %}

{% block body %}
    <div class="page page-center">
        <div class="container container-tight py-4">
            {{ form_start(resetForm) }}
                <div class="card card-md" >
                    <div class="card-body">
                        {% for flash_error in app.flashes('reset_password_error') %}
                            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                        {% endfor %}

                        <h2 class="card-title text-center mb-4">{{ "title.reset_password"|trans }}</h2>
                        <p class="text-muted mb-4">{{ "help.forgot_password"|trans }}</p>

                        {{ form_row(resetForm.plainPassword) }}

                        <div class="form-footer">
                            <button class="btn btn-primary w-100" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-rotate-clockwise" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                    <path d="M4.05 11a8 8 0 1 1 .5 4m-.5 5v-5h5" />
                                </svg>
                                {{ "label.reset_password"|trans }}
                            </button>
                        </div>
                    </div>
                </div>
                <div class="text-center text-muted mt-3">
                    {{ "label.back_to_login"|trans({'url': path('app_login')})|raw }}
                </div>
            {{ form_end(resetForm) }}
        </div>
    </div>
{% endblock %}
