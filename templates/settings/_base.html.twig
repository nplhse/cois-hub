{% extends 'base.html.twig' %}

{% block title %}{{ "title.settings"|trans }} - {{ parent() }}{% endblock %}

{% block body %}
        <!-- Page header -->
        <div class="page-header d-print-none">
            <div class="container-xl">
                <div class="row g-2 align-items-center">
                    <div class="col">
                        <div class="mb-1">
                            <ol class="breadcrumb" aria-label="breadcrumbs">
                                {% block breadcrumbs %}{% endblock %}
                            </ol>
                        </div>
                        <h2 class="page-title">
                            <a href="{{ path("app_settings_account") }}">{{ "title.settings"|trans }}</a>
                        </h2>
                    </div>
                </div>
            </div>
        </div>

        <!-- Page body -->
        <div class="page-body">
            <div class="container-xl">
                <div class="card">
                    <div class="row g-0">
                        <div class="col-3 d-none d-md-block border-end">
                            {% include "settings/_subnav.html.twig" %}
                        </div>
                        <div class="col d-flex flex-column">
                            {% block card %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
